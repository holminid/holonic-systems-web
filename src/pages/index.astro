---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Holonic Systems — Become Sound™">
  <main class="splash-bg min-h-[100dvh] flex items-center justify-center">
    <section class="splash-inner mx-auto max-w-3xl text-center px-6 py-16">

      <!-- Brand row -->
      <div class="brand-row mb-6">
        <img src="/assets/holon-logo-color.png" alt="Holonic logo" class="logo" />
        <h1 class="brand-title">Holonic Systems</h1>
      </div>

      <!-- Tagline -->
      <p class="tagline">
        Become part of the circuit and… <span class="font-semibold">Become Sound™</span>
      </p>

      <!-- App card -->
      <div class="app-card">
        <div class="app-row">
          <a href="https://holon.audio" class="app-link">Holon</a>
          <a href="https://itunes.apple.com/app/id1352687747" aria-label="Download Holon on the App Store" class="badge-link">
            <img src="/assets/appstore-badge.png" class="badge" alt="App Store" />
          </a>
        </div>
        <div class="divider"></div>
        <div class="app-row">
          <a href="https://holon.ist" class="app-link">Holon.ist</a>
          <a href="https://itunes.apple.com/app/id1359763686" aria-label="Download Holon.ist on the App Store" class="badge-link">
            <img src="/assets/appstore-badge.png" class="badge" alt="App Store" />
          </a>
        </div>
      </div>

      <!-- Update + email -->
      <div class="update-block">
        <p class="update-text">Update in progress… check back soon.</p>
        <p><a href="mailto:info@holonic.systems" class="email-link">info@holonic.systems</a></p>
      </div>

      <!-- Footer tagline -->
      <p class="footer-tagline">
        © {new Date().getFullYear()} Holonic Systems —
        <span class="footer-alt">The Internet of Everything is Musical™</span>
      </p>
    </section>
  </main>
</BaseLayout>
